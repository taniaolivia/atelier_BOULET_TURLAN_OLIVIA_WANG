        <span class="mdi mdi-magnify">
		    <input type="text" class="recherche" id="product-recherche" placeholder="Rechercher un produit">
		</span>
    </div>
    <table class="content-table">
        <tr>
            <th>Produit</th>
            <th>Quantit√©</th>
        </tr>
        <tbody>
        {% for produit in tabQuantiteProduits %}
