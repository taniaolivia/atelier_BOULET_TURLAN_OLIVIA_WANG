{% extends 'base.html.twig' %}

{% block title %}Detail de la commande{% endblock %}

{% block main %}
        {% for command in commande %}
        <div class="row">
            <div class="col-l-2">
                {{command.idCommande}}
            </div>
            <div class="col-l-4">
                {{command.montant}}
            </div>
            <div class="col-l-4">
                {{command.nomUtilisateur}}
            </div>
        </div>
        {% endfor %}
        {% for produit in produits %}
        <div class="row">
            <div class="col-l-2">
                {{produit.idProduit}}
            </div>
            <div class="col-l-2">
                {{produit.quantite}}
            </div>
            <div class="col-l-2">
                {{produit.nomProduit}}
            </div>
        </div>
        {% endfor %}

    <div class="content-colume">
        <div class="content-product-photo border-unset">
            <h3>Commande 1</h3><hr>
            <h3>Information du client 1</h3>
            <strong>Adresse de livraison</strong>
            <p>Prénom Nom</p>
            <p>Adresse</p><br>
            <strong>Montant total</strong>
            <p>29.00€</p><hr>

            <h3>Liste des produits</h3>
            <div class="content-liste content-liste-commande">
                <form class="padding-product-infos backcolor-product-infos">
                    <h3>Producteur 1</h3>
                    <hr>
                    <div>
                        <span>Carrote: </span>
                        <span>Quantité</span>
                        <span>4</span>
                    </div>
                </form>
                <form class="padding-product-infos backcolor-product-infos">
                    <h3>Producteur 2</h3>
                    <hr>
                </form>
                <form class="padding-product-infos backcolor-product-infos">
                    <h3>Producteur 3</h3>
                    <hr>
                </form>
                <form class="padding-product-infos backcolor-product-infos">
                    <h3>Producteur 4</h3>
                    <hr>
                </form>
            </div>
            <div class="content-buttons">
                <button class="btn btn-accueil" type="submit">Retourner à l'accueil</button>
                <button class="btn" type="submit">Commande payée</button>
                <button class="btn" type="submit">Commande livrée</button>
            </div>
        </div>
    </div>
    
{% endblock %}


